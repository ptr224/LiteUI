<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ld="clr-namespace:LiteUI">
    <Style TargetType="{x:Type ld:ToolbarItem}">
        <Setter Property="Margin" Value="2.5"/>
        <Setter Property="MinWidth" Value="{DynamicResource WindowButtonWidth}"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="TextBlock.FontSize" Value="{DynamicResource WindowBarFontSize}"/>
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding BarStyle, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ld:LiteWindow}}}" Value="{x:Static ld:WindowBarStyle.Big}">
                <Setter Property="Margin" Value="2.5,5"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>